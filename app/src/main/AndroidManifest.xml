<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cfryan.beyondchat">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 读取联系人权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.cfryan.beyondchat.activity.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.cfryan.beyondchat.activity.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" >
            <intent-filter>
                <action android:name="com.cfryan.action.LOGIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MainTabActivty"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" >
        </activity>

        <service android:name="com.cfryan.beyondchat.service.CoreService" />

        <provider
            android:name="com.cfryan.beyondchat.db.ChatProvider"
            android:authorities="com.hdu.cfryan.provider.Chats" />
        <provider
            android:name="com.cfryan.beyondchat.db.RosterProvider"
            android:authorities="com.hdu.cfryan.provider.Roster" />
        <provider
            android:name="com.cfryan.beyondchat.db.AvatarProvider"
            android:authorities="com.hdu.cfryan.provider.Avatar" />
        <provider
            android:name="com.cfryan.beyondchat.db.AddPhonesProvider"
            android:authorities="com.hdu.cfryan.provider.AddPhones" />
        <provider
            android:name="com.cfryan.beyondchat.db.NewFriendsProvider"
            android:authorities="com.hdu.cfryan.provider.NewFriends" />

    </application>

</manifest>
