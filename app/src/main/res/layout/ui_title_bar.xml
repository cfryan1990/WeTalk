<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ui_title_bar_height"
    android:background="@color/ui_green" >
    
    <ImageView
        android:id="@+id/ui_title_bar_back_btn"
        style="@style/title_bar_left_btn"
        android:onClick="myClickHandler" />

    <TextView
        android:id="@+id/ui_title_bar_org"
        style="@style/title_bar_txt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:text="杭州电子科技大学"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/ui_title_bar_txt"
        style="@style/title_bar_txt"
        android:textStyle="bold"
        android:layout_above="@id/ui_title_bar_org" />

    <ProgressBar
        android:id="@+id/ivTitleProgress"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_toLeftOf="@id/ui_title_bar_txt"
        android:layout_centerInParent="true"
        android:layout_marginRight="5dp"
        android:indeterminateDrawable="@anim/common_loading_1"
        android:visibility="visible"
         />



</RelativeLayout>
