<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:paddingBottom="6.0dip"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    android:paddingTop="6.0dip" >

    <TextView
        android:id="@+id/leftDatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="8.0dip"
        android:background="@drawable/chat_time_block"
        android:gravity="center_vertical"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:text="11:11"
        android:textColor="@color/font_black"
        android:textSize="10.0sp"
        />

    <ImageView
        android:id="@+id/leftAvatar"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_below="@id/leftDatetime"
        android:background="@drawable/login_default_avatar"
        android:clickable="true"
        android:scaleType="fitXY"
        android:focusable="true"
        android:src="@drawable/chat_item_icon_bg_selector" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/leftDatetime"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/leftAvatar"
        android:background="@drawable/balloon_l_selector"
        android:clickable="true"
        android:minHeight="44.0dip" >

        <TextView
            android:id="@+id/leftTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/font_black"
            android:textSize="16.0sp" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="7.0dip"
            android:layout_alignBottom="@id/leftTextView"
            android:layout_alignLeft="@id/leftTextView"
            android:layout_alignRight="@id/leftTextView"
            android:layout_marginBottom="3.0dip"
            android:layout_marginLeft="4.0dip"
            android:layout_marginRight="4.0dip"
            android:max="100"
            android:visibility="gone"
            android:progressDrawable="@drawable/progress_receivepic" />
    </RelativeLayout>

</RelativeLayout>