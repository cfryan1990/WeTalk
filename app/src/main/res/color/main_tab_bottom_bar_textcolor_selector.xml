<?xml version="1.0" encoding="utf-8"?><!-- 微博列表界面tab栏的点击时文字颜色，可随触摸事件变化 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中时的文字颜色 -->
    <item android:state_checked="true" android:color="@color/ui_green" />
    <!-- 单击时的文字颜色 -->
    <item android:state_pressed="true" android:color="@color/ui_green" />
    <!-- 默认时的文字颜色 -->
    <item android:color="#FF666666" />

</selector>